<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="false"
    android:animateLayoutChanges="false"
    android:background="#E92C2C3A"
    android:backgroundTintMode="add"
    tools:context=".main_one" >

    <ImageView
        android:id="@+id/cardviewbox"
        android:layout_width="362dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountviewbox"
        app:layout_constraintVertical_bias="0.24"
        app:srcCompat="@drawable/pohjavari" />

    <ImageView
        android:id="@+id/accountviewbox"
        android:layout_width="342dp"
        android:layout_height="93dp"
        android:layout_marginBottom="316dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyviewbox"
        app:layout_constraintVertical_bias="0.213"
        app:srcCompat="@drawable/pohjavari" />

    <ImageView
        android:id="@+id/banklogo"
        android:layout_width="265dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        app:srcCompat="@drawable/ic_bank1_logo" />

    <ImageView
        android:id="@+id/moneyviewbox"
        android:layout_width="225dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banklogo"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/pohjavari" />

    <TextView
        android:id="@+id/allmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fyrkat: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/moneyviewbox"
        app:layout_constraintEnd_toEndOf="@+id/moneyviewbox"
        app:layout_constraintStart_toStartOf="@+id/moneyviewbox"
        app:layout_constraintTop_toTopOf="@+id/moneyviewbox"
        app:layout_constraintVertical_bias="0.59" />

    <TextView
        android:id="@+id/accounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/accountviewbox"
        app:layout_constraintStart_toStartOf="@+id/accountviewbox"
        app:layout_constraintTop_toTopOf="@+id/accountviewbox"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/cards"
        android:layout_width="333dp"
        android:layout_height="48dp"
        android:text="Kortit"
        app:layout_constraintBottom_toBottomOf="@+id/cardviewbox"
        app:layout_constraintEnd_toEndOf="@+id/cardviewbox"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/cardviewbox"
        app:layout_constraintTop_toTopOf="@+id/cardviewbox"
        app:layout_constraintVertical_bias="0.604" />

    <ImageView
        android:id="@+id/activitybar"
        android:layout_width="317dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@android:drawable/bottom_bar" />

    <ImageButton
        android:id="@+id/addAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addAccountPopup"
        app:layout_constraintBottom_toTopOf="@+id/cardviewbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountviewbox"
        app:layout_constraintVertical_bias="0.527"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/addCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addCardPopup"
        app:layout_constraintBottom_toTopOf="@+id/activitybar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardviewbox"
        app:layout_constraintVertical_bias="0.07"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        app:layout_constraintBottom_toTopOf="@+id/activitybar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardviewbox"
        app:layout_constraintVertical_bias="0.465"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="payButton"
        app:layout_constraintBottom_toTopOf="@+id/activitybar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardviewbox"
        app:layout_constraintVertical_bias="0.793"
        app:srcCompat="@android:drawable/star_big_on" />

    <Button
        android:id="@+id/addMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addMoney"
        android:text="rahaa vittu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>